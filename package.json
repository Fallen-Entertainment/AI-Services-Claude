{
  "name": "ai-services-claude",
  "displayName": "AI.Services Claude",
  "description": "Zero-complexity Claude Code companion. Injects identity + memory context. That's it.",
  "version": "0.3.0",
  "publisher": "fallen",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fallen/ai-services-claude.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "claude",
    "claude code",
    "ai",
    "memory",
    "context"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aisc.updateContext",
        "title": "Update Claude Code Context Now",
        "category": "AI.Services Claude"
      }
    ],
    "configuration": {
      "title": "AI.Services Claude",
      "properties": {
        "aisc.homeDir": {
          "type": "string",
          "default": "",
          "description": "AI.Services Claude data directory (default: ~/.aiservices-claude)"
        },
        "aisc.contextUpdateIntervalMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "How often to auto-update Claude Code's context (minutes)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "undici-types": "^6.21.0"
  },
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/fallen/ai-services-claude/issues"
  },
  "homepage": "https://github.com/fallen/ai-services-claude#readme"
}
